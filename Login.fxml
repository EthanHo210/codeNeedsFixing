<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="JavaFiles.LoginController">
    <children>
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <HBox>
            <Button text="Login" onAction="#handleLoginAction" />
            <Label fx:id="loginMessageLabel" textFill="red"/>
        </HBox>
        <TextFlow>
            <Text text="Not a member? " />
            <Text text="Sign up" style="-fx-underline: true;" />
        </TextFlow>
    </children>
</AnchorPane>
